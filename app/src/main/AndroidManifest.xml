<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bltcamera">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".BltCamera"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".modules.test.TestActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.test.CameraReceiverActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.test.BluetoothTestActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".modules.watch.WatchActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.mobile.MobileActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.camera.CameraActivity"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>
